<% @tweets.each do |f| %>
<p>
    <%= f.message %>
    <%= link_to "削除", tweet_path(f), data: { "turbo-method": :delete } %>
    <%= link_to 'いいね', likes_path(tweet_id: f.id), data: { "turbo-method": :post } %>
    <%= link_to 'いいね削除', like_path(f), data: { "turbo-method": :delete } %>
</p>
<% end %>

<hr>

<%= form_for @tweet, url: { action: :create } do |f| %>
    <%= f.label :message, 'つぶやき' %>
    <%= f.text_field :message %>
    <%= f.submit 'ツイートする' %>
<% end %>

<hr>

<% if current_user %>
    <p><%= link_to 'ログアウト', top_login_path %></p>
<% else %>
    <p><%= link_to 'ログイン', top_login_path %></p>
<% end %>

<%= link_to 'ユーザー覧', users_path %>
